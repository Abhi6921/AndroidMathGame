<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResultActivity"
        android:orientation="vertical"
        android:background="@drawable/game_over" android:gravity="center_horizontal">
    <TextView
            android:text="Con"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4" tools:text="Congroulations"
            android:textSize="24sp" android:textColor="@color/purple_700" android:layout_marginTop="40dp"/>
    <TextView
            android:text="Score: 0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewResult" android:textSize="24sp"
            android:textColor="@color/purple_700" android:layout_marginTop="40dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_marginTop="100dp">
        <Button
                android:text="play again"
                android:layout_width="200dp"
                android:layout_height="wrap_content" android:id="@+id/btnPlayAgain" android:layout_weight="1"
                android:background="@drawable/button_shape" android:layout_margin="10dp"
                android:textColor="@color/blue" android:textSize="20sp" app:backgroundTint="@null"/>
        <Button
                android:text="exit"
                android:layout_width="200dp"
                android:layout_height="wrap_content" android:id="@+id/btnExit" android:layout_weight="1"
                android:background="@drawable/button_shape" android:layout_margin="10dp"
                android:textColor="@color/blue" android:textSize="20sp" app:backgroundTint="@null"/>
    </LinearLayout>
</LinearLayout>